@model Hryhoriichuk.University.Instagram.Web.Models.StoryViewModel

<!-- Style for the modal -->
<style>
    /* Modal container */
    .modal {
        display: none; /* Hidden by default */
        position: fixed; /* Stay in place */
        z-index: 999; /* Sit on top */
        left: 0;
        top: 0;
        width: 100%; /* Full width */
        height: 100%; /* Full height */
        overflow: auto; /* Enable scroll if needed */
        background-color: rgb(0,0,0); /* Fallback color */
        background-color: rgba(0,0,0,0.9); /* Black w/ opacity */
    }

    /* Modal content */
    .modal-content {
        background-color: #fefefe;
        margin: 15% auto; /* 15% from the top and centered */
        padding: 20px;
        border: 1px solid #888;
        width: 40%; /* Adjusted width */
        max-width: 500px; /* Maximum width */
    }

    /* Close button */
    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }

    /* User information */
    .user-info {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
    }

    .profile-picture {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        object-fit: cover;
        margin-right: 10px;
    }

    .username {
        font-size: 18px;
        font-weight: bold;
    }

    /* Story image */
    .story-image {
        width: 100%;
        height: auto;
        margin-bottom: 10px;
    }

    /* Story details */
    .story-details {
        margin-bottom: 10px;
    }

    /* Story navigation */
    .story-navigation {
        text-align: center;
    }

    .prev,
    .next {
        display: inline-block;
        padding: 8px 16px;
        background-color: #f1f1f1;
        border-radius: 5px;
        text-decoration: none;
        color: black;
        margin: 0 5px;
        cursor: pointer; /* Change cursor to pointer */
    }

        .prev:hover,
        .next:hover {
            background-color: #ddd;
        }
</style>

@section scripts {
    <script>
        // Function to load story details
        function loadStory(url) {
            fetch(url)
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.text();
                })
                .then(html => {
                    // Replace the modal content with the loaded story details
                    document.querySelector('.modal-content').innerHTML = html;
                })
                .catch(error => console.error('Error:', error));
        }
    </script>
}

<!-- Modal -->
<div id="storyModal" class="modal">
    <!-- Modal content -->
    <div class="modal-content">
        <span class="close">&times;</span>
        <!-- User information -->
        <div class="user-info">
            <img src="@Model.ProfilePicturePath" alt="Profile Picture" class="profile-picture">
            <div class="username">@Model.User.UserName</div>
        </div>
        <!-- Story media -->
        <img src="@Model.MediaUrl" alt="Story" class="story-image">
        <!-- Posted time and expiration -->
        <div class="story-details">
            <div class="posted-time">@Model.PostedAt.ToString("MMMM dd, yyyy HH:mm")</div>
            <div class="expires-in">Expires in: @Model.ExpiresAt.Hours hours @Model.ExpiresAt.Minutes minutes</div>
        </div>
        <!-- Previous and next story buttons -->
    </div>
</div>

